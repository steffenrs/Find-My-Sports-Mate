@using Domain;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/jquery-ui-1.8.20.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.19.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script>
        $(function () {
            $("input:submit, .button").button();
        });
    </script>
</head>
@if (HttpContext.Current.Request.IsAuthenticated){
    ViewBag.Email = ((PresentationLayer.CustomPrincipal)HttpContext.Current.User).Identity.Name;
}
   else {
    ViewBag.Email = "...";}
    
<body class="clearfix">
<div id="header">
    <div id="title"><img src=@Url.Content("~/Content/images/logo1-wide.png") style="width: 80%" /></div>
    <div class="menu">
        <a href="#">@Html.ActionLink((string)ViewBag.Email, "Edit", "User")</a> | 
        <a href="#">@Html.ActionLink("Dashboard", "Index", "Dashboard")</a> |
           
                @Html.Partial("_LogOnPartial")
            
    </div>
</div>
<div id="body">
    @RenderBody()
</div>

</body>

<div class="clear"></div>

<div id="footer">
    <p>This is a QUT-project by N8333734 Simon Stubben, N8333734 Hans Stubben & N8333734 Steffen Stubben. May 2012.</p>
</div>

</html>
